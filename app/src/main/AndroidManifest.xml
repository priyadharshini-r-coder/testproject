<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navigationcomponent">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NavigationComponent">
        <activity
            android:name=".activity.NavigationModules"
            android:exported="true" />
        <activity
            android:name=".activity.NavigationActivity"
            android:exported="true" />
        <activity
            android:name=".dependencyinjection.main.view.DependencyInjectionActivity"
            android:exported="true" />
        <activity
            android:name=".activity.CoroutinesRetrofitActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MotionLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".activity.CoroutinesActivity"
            android:exported="true" />
        <activity
            android:name=".activity.WorkerActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PagingActivity"
            android:exported="true"
            android:value="@navigation/nav_graph">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="android.app.shortcuts"
            android:resource="@xml/shortcuts" />
    </application>

</manifest>